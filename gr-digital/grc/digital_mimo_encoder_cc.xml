<?xml version="1.0"?>
<block>
  <name>MIMO Encoder</name>
  <key>digital_mimo_encoder_cc</key>
  <category>[MIMO]</category>
  <import>from gnuradio import digital</import>
  <make>digital.mimo_encoder_cc($M, $mimo_technique)</make>
  <param>
    <name>M</name>
    <key>M</key>
    <value>2</value>
    <type>int</type>
  </param>
  <param>
    <name>MIMO technique</name>
    <key>mimo_technique</key>
    <value>vblast</value>
    <type>string</type>
    <option>
      <name>V-BLAST</name>
      <key>vblast</key>
    </option>
    <option>
      <name>Alamouti</name>
      <key>alamouti</key>
    </option>
    <option>
      <name>Differential Alamouti</name>
      <key>diff_stbc</key>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <nports>$M</nports>
  </source>
</block>
